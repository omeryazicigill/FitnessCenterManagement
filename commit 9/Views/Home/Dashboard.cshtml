@model FitnessCenterManagement.ViewModels.MemberDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <div class="container">
        <h1><i class="bi bi-speedometer me-2"></i>Dashboard</h1>
        <p class="mb-0 opacity-75">Hoş geldiniz! Randevularınızı ve aktivitelerinizi buradan takip edin.</p>
    </div>
</div>

<div class="container">
    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                            <i class="bi bi-calendar-check fs-4 text-primary"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">@Model.TotalAppointments</h3>
                            <small class="text-muted">Toplam Randevu</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                            <i class="bi bi-check-circle fs-4 text-success"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">@Model.CompletedAppointments</h3>
                            <small class="text-muted">Tamamlanan</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                            <i class="bi bi-hourglass-split fs-4 text-warning"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">@Model.UpcomingAppointments</h3>
                            <small class="text-muted">Yaklaşan</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-4">
        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-lightning-charge me-2"></i>Hızlı İşlemler</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-calendar-plus me-2"></i>Yeni Randevu Al
                        </a>
                        <a asp-controller="AI" asp-action="Recommendation" class="btn btn-outline-primary">
                            <i class="bi bi-robot me-2"></i>AI Öneri Al
                        </a>
                        <a asp-controller="Home" asp-action="Trainers" class="btn btn-outline-primary">
                            <i class="bi bi-people me-2"></i>Antrenörleri Gör
                        </a>
                        <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-secondary">
                            <i class="bi bi-person me-2"></i>Profilim
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Upcoming Appointments -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-calendar-event me-2"></i>Yaklaşan Randevular</h5>
                    <a asp-controller="Appointment" asp-action="Index" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.UpcomingAppointmentsList.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th>Hizmet</th>
                                        <th>Antrenör</th>
                                        <th>Tarih</th>
                                        <th>Saat</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.UpcomingAppointmentsList)
                                    {
                                        <tr>
                                            <td><strong>@appointment.ServiceName</strong></td>
                                            <td>@appointment.TrainerName</td>
                                            <td>@appointment.AppointmentDate.ToString("dd MMM yyyy")</td>
                                            <td>@appointment.StartTime.ToString(@"hh\:mm")</td>
                                            <td><span class="badge bg-@appointment.StatusColor">@appointment.StatusName</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x display-4 text-muted mb-3"></i>
                            <p class="text-muted mb-3">Yaklaşan randevunuz bulunmuyor.</p>
                            <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-1"></i>Randevu Oluştur
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




