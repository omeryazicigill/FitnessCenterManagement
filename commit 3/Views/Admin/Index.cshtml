@model FitnessCenterManagement.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="page-header">
    <div class="container">
        <h1><i class="bi bi-speedometer2 me-2"></i>Admin Panel</h1>
        <p class="mb-0 opacity-75">Spor merkezi yönetim paneline hoş geldiniz</p>
    </div>
</div>

<div class="container">
    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                            <i class="bi bi-people-fill fs-4 text-primary"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">@Model.TotalMembers</h3>
                            <small class="text-muted">Toplam Üye</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                            <i class="bi bi-person-badge fs-4 text-success"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">@Model.TotalTrainers</h3>
                            <small class="text-muted">Aktif Antrenör</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                            <i class="bi bi-calendar-check fs-4 text-warning"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">@Model.TotalAppointments</h3>
                            <small class="text-muted">Toplam Randevu</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
                            <i class="bi bi-currency-lira fs-4 text-info"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">@Model.TotalRevenue.ToString("N0") ₺</h3>
                            <small class="text-muted">Toplam Gelir</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-warning bg-opacity-10">
                <div class="card-body text-center py-4">
                    <h2 class="fw-bold text-warning mb-0">@Model.PendingAppointments</h2>
                    <small class="text-muted">Onay Bekleyen Randevu</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary bg-opacity-10">
                <div class="card-body text-center py-4">
                    <h2 class="fw-bold text-primary mb-0">@Model.TodayAppointments</h2>
                    <small class="text-muted">Bugünkü Randevu</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success bg-opacity-10">
                <div class="card-body text-center py-4">
                    <h2 class="fw-bold text-success mb-0">@Model.MonthlyRevenue.ToString("N0") ₺</h2>
                    <small class="text-muted">Bu Ay Gelir</small>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-4">
        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-lightning-charge me-2"></i>Hızlı İşlemler</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Gyms" class="btn btn-outline-primary text-start">
                            <i class="bi bi-building me-2"></i>Spor Salonları
                        </a>
                        <a asp-action="Services" class="btn btn-outline-primary text-start">
                            <i class="bi bi-grid me-2"></i>Hizmetler
                        </a>
                        <a asp-action="Trainers" class="btn btn-outline-primary text-start">
                            <i class="bi bi-people me-2"></i>Antrenörler
                        </a>
                        <a asp-action="Appointments" class="btn btn-outline-primary text-start">
                            <i class="bi bi-calendar-check me-2"></i>Randevular
                        </a>
                        <a asp-action="Members" class="btn btn-outline-primary text-start">
                            <i class="bi bi-person-lines-fill me-2"></i>Üyeler
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Recent Appointments -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-clock-history me-2"></i>Son Randevular</h5>
                    <a asp-action="Appointments" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Üye</th>
                                    <th>Hizmet</th>
                                    <th>Antrenör</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.RecentAppointments)
                                {
                                    <tr>
                                        <td>@appointment.UserName</td>
                                        <td>@appointment.ServiceName</td>
                                        <td>@appointment.TrainerName</td>
                                        <td>@appointment.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge bg-@appointment.StatusColor">@appointment.StatusName</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




