@model FitnessCenterManagement.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="text-center mb-4">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <h2 class="text-white fw-bold">
                            <i class="bi bi-lightning-charge-fill text-warning me-2"></i>FitLife
                        </h2>
                    </a>
                </div>
                
                <div class="card border-0 shadow-lg rounded-4">
                    <div class="card-body p-5">
                        <h3 class="fw-bold text-center mb-2">Hoş Geldiniz!</h3>
                        <p class="text-muted text-center mb-4">Hesabınıza giriş yapın</p>
                        
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <input type="hidden" asp-for="ReturnUrl" />
                            
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-medium"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-envelope text-muted"></i>
                                    </span>
                                    <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="ornek@email.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-medium"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-lock text-muted"></i>
                                    </span>
                                    <input asp-for="Password" class="form-control border-start-0 ps-0" placeholder="••••••••" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input" />
                                    <label asp-for="RememberMe" class="form-check-label small">Beni Hatırla</label>
                                </div>
                            </div>
                            
                            <button type="submit" class="btn btn-primary w-100 py-3 fw-bold">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                            </button>
                        </form>
                        
                        <hr class="my-4">
                        
                        <p class="text-center mb-0">
                            Hesabınız yok mu? 
                            <a asp-controller="Account" asp-action="Register" class="text-primary fw-bold text-decoration-none">
                                Üye Ol
                            </a>
                        </p>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <a asp-controller="Home" asp-action="Index" class="text-white-50 text-decoration-none">
                        <i class="bi bi-arrow-left me-1"></i> Ana Sayfaya Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




