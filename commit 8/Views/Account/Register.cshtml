@model FitnessCenterManagement.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Üye Ol";
}

<div class="min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center mb-4">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <h2 class="text-white fw-bold">
                            <i class="bi bi-lightning-charge-fill text-warning me-2"></i>FitLife
                        </h2>
                    </a>
                </div>
                
                <div class="card border-0 shadow-lg rounded-4">
                    <div class="card-body p-5">
                        <h3 class="fw-bold text-center mb-2">Üye Ol</h3>
                        <p class="text-muted text-center mb-4">Sağlıklı yaşama ilk adımı atın</p>
                        
                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label fw-medium"></label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Adınız" />
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label fw-medium"></label>
                                    <input asp-for="LastName" class="form-control" placeholder="Soyadınız" />
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-medium"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-envelope text-muted"></i>
                                    </span>
                                    <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="ornek@email.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label fw-medium"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-telephone text-muted"></i>
                                    </span>
                                    <input asp-for="PhoneNumber" class="form-control border-start-0 ps-0" placeholder="0532 XXX XX XX" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="DateOfBirth" class="form-label fw-medium"></label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Password" class="form-label fw-medium"></label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-lock text-muted"></i>
                                        </span>
                                        <input asp-for="Password" class="form-control border-start-0 ps-0" placeholder="••••••••" />
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label fw-medium"></label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-lock-fill text-muted"></i>
                                        </span>
                                        <input asp-for="ConfirmPassword" class="form-control border-start-0 ps-0" placeholder="••••••••" />
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" id="terms" required>
                                <label class="form-check-label small" for="terms">
                                    <a href="#" class="text-primary">Kullanım koşullarını</a> ve 
                                    <a href="#" class="text-primary">gizlilik politikasını</a> kabul ediyorum.
                                </label>
                            </div>
                            
                            <button type="submit" class="btn btn-primary w-100 py-3 fw-bold">
                                <i class="bi bi-person-plus me-2"></i>Üye Ol
                            </button>
                        </form>
                        
                        <hr class="my-4">
                        
                        <p class="text-center mb-0">
                            Zaten üye misiniz? 
                            <a asp-controller="Account" asp-action="Login" class="text-primary fw-bold text-decoration-none">
                                Giriş Yap
                            </a>
                        </p>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <a asp-controller="Home" asp-action="Index" class="text-white-50 text-decoration-none">
                        <i class="bi bi-arrow-left me-1"></i> Ana Sayfaya Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




