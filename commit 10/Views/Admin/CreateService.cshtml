@model FitnessCenterManagement.Models.Entities.Service
@{
    ViewData["Title"] = "Yeni Hizmet";
    var gyms = ViewBag.Gyms as List<FitnessCenterManagement.Models.Entities.Gym>;
}

<div class="page-header">
    <div class="container">
        <h1><i class="bi bi-grid me-2"></i>Yeni Hizmet Ekle</h1>
        <p class="mb-0 opacity-75">Yeni bir hizmet oluşturun</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="CreateService" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Hizmet adını giriniz" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Hizmet açıklaması"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DurationMinutes" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="DurationMinutes" class="form-control" type="number" min="15" max="180" />
                                    <span class="input-group-text">dakika</span>
                                </div>
                                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                                    <span class="input-group-text">₺</span>
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label"></label>
                                <select asp-for="Category" asp-items="Html.GetEnumSelectList<FitnessCenterManagement.Models.Entities.ServiceCategory>()" class="form-select">
                                    <option value="">-- Kategori Seçin --</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="GymId" class="form-label"></label>
                                <select asp-for="GymId" class="form-select">
                                    <option value="">-- Spor Salonu Seçin --</option>
                                    @if (gyms != null)
                                    {
                                        @foreach (var gym in gyms)
                                        {
                                            <option value="@gym.Id">@gym.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="GymId" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" checked />
                                <label asp-for="IsActive" class="form-check-label"></label>
                            </div>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>Kaydet
                            </button>
                            <a asp-action="Services" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-1"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

