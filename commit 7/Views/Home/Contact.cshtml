@{
    ViewData["Title"] = "İletişim";
}

<div class="page-header">
    <div class="container">
        <h1><i class="bi bi-envelope me-2"></i>İletişim</h1>
        <p class="mb-0 opacity-75">Bizimle iletişime geçin</p>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <!-- İletişim Bilgileri -->
        <div class="col-lg-5 mb-4 mb-lg-0">
            <h3 class="fw-bold mb-4">Bize Ulaşın</h3>
            <p class="text-muted mb-4">
                Sorularınız, önerileriniz veya üyelik hakkında bilgi almak için bizimle iletişime geçebilirsiniz.
            </p>
            
            <div class="d-flex mb-4">
                <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                    <i class="bi bi-geo-alt fs-5 text-primary"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-1">Adres</h6>
                    <p class="text-muted mb-0">Sakarya Üniversitesi Kampüsü<br>Esentepe, 54050 Serdivan/Sakarya</p>
                </div>
            </div>
            
            <div class="d-flex mb-4">
                <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                    <i class="bi bi-telephone fs-5 text-success"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-1">Telefon</h6>
                    <p class="text-muted mb-0">0264 123 45 67</p>
                </div>
            </div>
            
            <div class="d-flex mb-4">
                <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                    <i class="bi bi-envelope fs-5 text-warning"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-1">E-posta</h6>
                    <p class="text-muted mb-0">info@fitlife.com</p>
                </div>
            </div>
            
            <div class="d-flex mb-4">
                <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
                    <i class="bi bi-clock fs-5 text-info"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-1">Çalışma Saatleri</h6>
                    <p class="text-muted mb-0">
                        Pazartesi - Cuma: 06:00 - 23:00<br>
                        Cumartesi - Pazar: 08:00 - 22:00
                    </p>
                </div>
            </div>
            
            <h6 class="fw-bold mb-3">Sosyal Medya</h6>
            <div class="d-flex gap-2">
                <a href="#" class="btn btn-outline-primary rounded-circle">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="#" class="btn btn-outline-danger rounded-circle">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="#" class="btn btn-outline-info rounded-circle">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="#" class="btn btn-outline-danger rounded-circle">
                    <i class="bi bi-youtube"></i>
                </a>
            </div>
        </div>
        
        <!-- İletişim Formu -->
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-4">Mesaj Gönderin</h4>
                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Adınız Soyadınız</label>
                                <input type="text" class="form-control" placeholder="Adınızı giriniz">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">E-posta Adresiniz</label>
                                <input type="email" class="form-control" placeholder="E-posta adresinizi giriniz">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Konu</label>
                            <select class="form-select">
                                <option value="">-- Konu Seçin --</option>
                                <option>Üyelik Bilgisi</option>
                                <option>Antrenör Hakkında</option>
                                <option>Randevu</option>
                                <option>Şikayet/Öneri</option>
                                <option>Diğer</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mesajınız</label>
                            <textarea class="form-control" rows="5" placeholder="Mesajınızı buraya yazınız..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-send me-2"></i>Gönder
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Harita -->
    <div class="card border-0 shadow-sm mt-5">
        <div class="card-body p-0">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.6036145439!2d30.3316!3d40.7416!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDDCsDQ0JzI5LjgiTiAzMMKwMTknNTMuOCJF!5e0!3m2!1str!2str!4v1234567890" 
                width="100%" 
                height="350" 
                style="border:0; border-radius: 15px;" 
                allowfullscreen="" 
                loading="lazy">
            </iframe>
        </div>
    </div>
</div>

