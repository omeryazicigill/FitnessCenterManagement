@model List<FitnessCenterManagement.Models.Entities.ApplicationUser>
@{
    ViewData["Title"] = "Üye Yönetimi";
}

<div class="page-header">
    <div class="container">
        <h1><i class="bi bi-person-lines-fill me-2"></i>Üye Yönetimi</h1>
        <p class="mb-0 opacity-75">Kayıtlı üyeleri görüntüleyin</p>
    </div>
</div>

<div class="container">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Üye</th>
                            <th>E-posta</th>
                            <th>Telefon</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                            <i class="bi bi-person text-primary"></i>
                                        </div>
                                        <strong>@member.FullName</strong>
                                    </div>
                                </td>
                                <td>@member.Email</td>
                                <td>@member.PhoneNumber</td>
                                <td>@member.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="MemberDetails" asp-route-id="@member.Id" class="btn btn-outline-primary" title="Detaylar">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(member.Id.Replace("-", ""))" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                    
                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal@(member.Id.Replace("-", ""))" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Silme Onayı</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <strong>@member.FullName</strong> adlı üyeyi silmek istediğinize emin misiniz?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                    <form asp-action="DeleteMember" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@member.Id" />
                                                        <button type="submit" class="btn btn-danger">Sil</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Geri Dön
        </a>
    </div>
</div>




