@model List<FitnessCenterManagement.ViewModels.AppointmentListViewModel>
@{
    ViewData["Title"] = "Randevu Yönetimi";
    var currentStatus = ViewBag.CurrentStatus as FitnessCenterManagement.Models.Entities.AppointmentStatus?;
}

<div class="page-header">
    <div class="container">
        <h1><i class="bi bi-calendar-check me-2"></i>Randevu Yönetimi</h1>
        <p class="mb-0 opacity-75">Randevuları görüntüleyin ve yönetin</p>
    </div>
</div>

<div class="container">
    <!-- Filter Buttons -->
    <div class="mb-4">
        <div class="btn-group" role="group">
            <a asp-action="Appointments" class="btn @(currentStatus == null ? "btn-primary" : "btn-outline-primary")">Tümü</a>
            <a asp-action="Appointments" asp-route-status="@FitnessCenterManagement.Models.Entities.AppointmentStatus.Pending" 
               class="btn @(currentStatus == FitnessCenterManagement.Models.Entities.AppointmentStatus.Pending ? "btn-warning" : "btn-outline-warning")">
                Bekleyen
            </a>
            <a asp-action="Appointments" asp-route-status="@FitnessCenterManagement.Models.Entities.AppointmentStatus.Approved" 
               class="btn @(currentStatus == FitnessCenterManagement.Models.Entities.AppointmentStatus.Approved ? "btn-success" : "btn-outline-success")">
                Onaylanan
            </a>
            <a asp-action="Appointments" asp-route-status="@FitnessCenterManagement.Models.Entities.AppointmentStatus.Completed" 
               class="btn @(currentStatus == FitnessCenterManagement.Models.Entities.AppointmentStatus.Completed ? "btn-info" : "btn-outline-info")">
                Tamamlanan
            </a>
        </div>
    </div>
    
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Üye</th>
                            <th>Hizmet</th>
                            <th>Antrenör</th>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th>Ücret</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model)
                        {
                            <tr>
                                <td>@appointment.UserName</td>
                                <td>@appointment.ServiceName</td>
                                <td>@appointment.TrainerName</td>
                                <td>@appointment.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                <td>@appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")</td>
                                <td>@appointment.Price.ToString("N0") ₺</td>
                                <td><span class="badge bg-@appointment.StatusColor">@appointment.StatusName</span></td>
                                <td>
                                    <div class="d-flex gap-1 flex-wrap">
                                        @if (appointment.Status == FitnessCenterManagement.Models.Entities.AppointmentStatus.Pending)
                                        {
                                            <form asp-action="UpdateAppointmentStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                <input type="hidden" name="status" value="@FitnessCenterManagement.Models.Entities.AppointmentStatus.Approved" />
                                                <button type="submit" class="btn btn-sm btn-success" title="Onayla">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </form>
                                            <form asp-action="UpdateAppointmentStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                <input type="hidden" name="status" value="@FitnessCenterManagement.Models.Entities.AppointmentStatus.Rejected" />
                                                <button type="submit" class="btn btn-sm btn-warning" title="Reddet">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            </form>
                                        }
                                        @if (appointment.Status == FitnessCenterManagement.Models.Entities.AppointmentStatus.Approved)
                                        {
                                            <form asp-action="UpdateAppointmentStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                <input type="hidden" name="status" value="@FitnessCenterManagement.Models.Entities.AppointmentStatus.Completed" />
                                                <button type="submit" class="btn btn-sm btn-info" title="Tamamlandı">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                        }
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(appointment.Id)" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                    
                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal@(appointment.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Silme Onayı</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Bu randevuyu silmek istediğinize emin misiniz?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                    <form asp-action="DeleteAppointment" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@appointment.Id" />
                                                        <button type="submit" class="btn btn-danger">Sil</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Geri Dön
        </a>
    </div>
</div>




